{
    "name": "BrowseGuard V1",
    "description": "Protecting Online Users Through Ad Blocking",
    "version": "1.1", 
    "manifest_version": 3, 
    "action": {
        "default_popup": "popup/popup.html", 
        "default_icon": "icons/tempIcon.png"
    },

    "permissions":[
        "declarativeNetRequest"
    ],

    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "website_ruleset", 
                "enabled": false,
                "path": "web_rules.json"
            },
            {
                "id": "easyList_block",
                "enabled": false,
                "path": "easylistrules.json"
            },
            {
                "id": "oisdListBlock",
                "enabled": true,
                "path": "smallOisdList.json"
            }
        ]
    },
    
    "background": {
        "service_worker": "background.js"
    } ,

    "host_permissions": [
        "<all_urls>"
    ]
}